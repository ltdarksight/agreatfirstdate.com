%h2.title Upload photos: select an album

%p Select one of your Photo Albums
.facebook-albums
  <% if (albums.length > 0) { %>
  <% albums.each(function(album) { %>
  .album-item
    %a{:href=>"#", :class => 'link-to-album', 'data-aid' => '<%= album.get("aid") %>'.html_safe }
      %img{src: '<%= album.get("src") %>', 'data-aid' => '<%= album.get("aid") %>'.html_safe}
  %p
    %a{:href=>"#", :class => 'link-to-album', 'data-aid' => '<%= album.get("aid") %>'.html_safe}
      <%= album.get("name") %>
  %p
    <%= album.get("photo_count") %> Photos
  <% }); %>
  <% } else { %>
  %p{:style => "color:red;"} You have no albums in facebook
  <% };%>

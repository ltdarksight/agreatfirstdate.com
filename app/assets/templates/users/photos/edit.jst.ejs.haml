%form{action: avatars_api_profiles_path, method: 'post',  id: 'edit-photo', data: {remote: 'true'}}
  = hidden_field_tag :authenticity_token, "<%= authenticity_token %>".html_safe
  .step Step 1: Choose up to 3 profile pictures
  = file_field_tag 'avatars[][image]', multiple: true, accept: 'image/png,image/jpeg'
  .import-from
    Import photo from:
    = link_to raw('<i class="instagram-icon"></i>'), '/users/auth/instagram'
  %span.loader.hide= image_tag 'file-loader.gif'
  .errors_
.avatars_wrapper
  .avatars
.large_
.actions
  %span.step Step 2: Crop the photos using this button:
  = link_to_function raw("#{image_tag('crop.png')} Crop"), "$('a.crop_').trigger('click')"
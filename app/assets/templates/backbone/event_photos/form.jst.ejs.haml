= form_for EventPhoto.new, remote: true do |f|
  = hidden_field_tag :authenticity_token
  = hidden_field_tag :pillar_id
  = f.label :image, t('event_descriptors.any_pics')
  = link_to image_tag('import-photo-from-facebook.png', :alt => "Import photo from facebook"), "#", :class => "facebook-import"
  = f.file_field :image, class: 'event_photo_image_', multiple: true, accept: 'image/png,image/jpeg'
  %span.upload-status_ Select file
  %ul.event_photos_previews_.jcarousel-skin-great

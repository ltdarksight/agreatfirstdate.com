.row-fluid
  .span6
    .authorization_forms_wrapper
      .devise-block
        %h1
          Sign
          %span in
        - wrapper_class = 'error' if flash[:alert].present?
        = simple_form_for((@user ||User.new), :as => :user, :url => session_path(:user)) do |f|
          .inputs
            = f.input :email, :required => true, :autofocus => true,
              :placeholder => "E-mail", :label => false,
              wrapper_html: { class: wrapper_class }

            = f.input :password, :required => true, :placeholder => "Password",
              :label => false, wrapper_html: { class: wrapper_class }

            = f.label :remember_me, :class => 'checkbox' do
              = f.check_box :remember_me, :as => :boolean if devise_mapping.rememberable?
              = 'Remember me'
          .bottom_links
            = link_to "Forgot your password?", new_password_path(resource_name)
            %br
            = link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name)
          .actions
            = f.button :submit, "Sign in"

  .span6
    .authorization_forms_wrapper
      .devise-block
        %h1
          Sign
          %span up
        .clear
        = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
          = f.error_notification

          .inputs
            = f.input :email, :required => true, :label => false, :placeholder => 'E-mail'
            = f.input :password, :required => true, :label => false, :placeholder => 'Password'
            = f.input :password_confirmation, :required => true, :label => false, :placeholder => 'Password confirmation'
            .terms_of_service
              = f.label :terms_of_service, :class => 'checkbox' do
                = f.check_box :terms_of_service
                = "I accept the #{ link_to_privacy_policy } and #{ link_to_terms_of_use } of this site.".html_safe


          .actions
            = f.button :submit, "Free sign up"
          .bottom_links
            = link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name)





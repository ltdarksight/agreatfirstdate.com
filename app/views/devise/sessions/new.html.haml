.authorization_forms_wrapper
  %h1 
    Sign 
    %span in
  .facebook-signin-button
    = link_to omniauth_authorize_path(resource_name, :facebook) do
      %i.facebook-signin-button
  = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
    .inputs
      = f.input :email, :required => true, :autofocus => true, :placeholder => "E-mail", :label => false
      = f.input :password, :required => true, :placeholder => "Password", :label => false
      = f.check_box :remember_me, :as => :boolean if devise_mapping.rememberable?
      = f.label :remember_me, "Remember me"
    .bottom_links
      = link_to "Forgot your password?", new_password_path(resource_name)
      %br
      = link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name)
    .actions
      = f.button :submit, "Sign in"
  

= form_for @profile do |f|
  -if @profile.errors.any?
    #error_explanation
      %h2= "#{pluralize(@profile.errors.count, "error")} prohibited this profile from being saved:"
      %ul
        - @profile.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :who_am_i
    = f.text_area :who_am_i
  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :gender
    = f.text_field :gender
  .field
    = f.label :looking_for
    = f.text_field :looking_for
  .field
    = f.label :in_or_around
    = f.text_field :in_or_around
  .field
    = f.label :age
    = f.text_field :age
  .actions
    = f.submit 'Save'

= form_for @profile, :url => update_profile_path do |f|
  -if @profile.errors.any?
    #error_explanation
      %h2= "#{pluralize(@profile.errors.count, "error")} prohibited this profile from being saved:"
      %ul
        - @profile.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :gender
    = f.text_field :gender
  .field
    = f.label :looking_for
    = f.text_field :looking_for
  .field
    = f.label :looking_for_age
    = f.select :looking_for_age, options_for_select([["18-24","18-24"],["25-36","25-36"],["37-50","37-50"],["50 and over","50 and over"]])
  .field
    = f.label :in_or_around
    = f.text_field :in_or_around
  .field
    = f.label :age
    = f.text_field :age
  .field
    = f.label :who_am_i
    = f.text_area :who_am_i
  .actions
    = f.submit 'Save'

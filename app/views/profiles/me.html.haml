%section#leftPillarArray
  #leftPillarContainer
    #pillarImage
      .categoryImage
        = image_for_pillar(@pillars[0])
        .categoryDesc
          %h3= @pillars[0].pillar_category.name
    #pillarContent
      = link_to (image_tag "profile_add_button.png"), "#"
      - if @pillars[0].event_items.empty?
        %p.add_new_event= link_to (image_tag "profile_add_new_event.png"), "", :data_pillar_id => @pillars[0].id
      - else
        - @pillars[0].event_items.each do |item|
          %span= item.title
    - unless @pillars[0].present?  
      = link_to "Add your first category", "", :id => 'open_pillars_lightbox'

%section#rightPillarArray
  %section#pillarAboutMe
    #pillarAboutMeContent
      %h2 About me
      .pillarContent
        - if @profile.attributes.any?{|k, v| v.present?}
          %p
            = link_to 'Edit...', edit_profile_path
        - else
          = link_to 'Add your own text here', ""
    #pillarAboutMePhoto
      - unless current_user.profile.avatar.present?
        = link_to (image_tag "profile_add_photo.png"), "", :id => "add_avatar_link"
      - else
        = image_tag current_user.profile.avatar.thumb.url
    #pillarAboutMeMeet
      %h2 Who i'd like to meet
      .pillarContent
        %p 


!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %title= content_for?(:title) ? yield(:title) : "Agreatfirstdate"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "welcome", :media => "all"
    / %link(href="images/apple-touch-icon-144x144.png" rel="apple-touch-icon-precomposed" sizes="144x144")
    / %link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon-precomposed" sizes="114x114")
    / %link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon-precomposed" sizes="72x72")
    / %link(href="images/apple-touch-icon.png" rel="apple-touch-icon-precomposed")
    / %link(href="favicon.ico" rel="shortcut icon")
    %script{:src => "//use.typekit.net/dnc5mvx.js", :type => "text/javascript"}
    :javascript
      try{Typekit.load();}catch(e){}


  %body{class: "#{controller_name} #{action_name}"}
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          = link_to image_tag('agreatfirstdate.png'), root_path, :class => 'brand'
          .container
            .pull-right
              %ul.nav.menu
                %li= link_to_function "The Story", "showSlide(0)", :class => 'slider-link-0'
                %li="|"
                %li= link_to_function "How It Works", "showSlide(1)", :class => 'slider-link-1'
                %li="|"
                %li= link_to_function "Get Started", "showSlide(2)", :class => 'slider-link-2'
              %ul.auth_block.pull-left
                %li= link_to 'Sign up', '#', class: 'btn'
                %li.dropdown
                  = link_to 'Log in', '#', class: 'btn dropdown-toggle', :data => {:toggle => "dropdown"}
                  %ul.dropdown-menu.dropdown-form
                    %li
                      = simple_form_for resource, as: resource_name, url: session_path(resource_name) do |f|
                        .inputs
                          = f.input :email, :required => true, :autofocus => true, :placeholder => "E-mail", :label => false
                          = f.input :password, :required => true, :placeholder => "Password", :label => false
                          = f.input :remember_me, :as => :boolean if devise_mapping.rememberable?
                        .bottom_links
                          = link_to "Forgot your password?", new_password_path(resource_name)
                        .actions
                          = f.button :submit, "Sign in" 
                      
    - if controller_name == 'welcome' && action_name == 'index'
      = bootstrap_flash
      = yield
    - else
      .container
        .row
          .span12
            = bootstrap_flash
            = yield
    
    %footer#home-footer
      .container
        .inner
          .row
            .span6
              %nav
                %ul#footer-nav
                  %li= link_to 'The Blog', blog_path
                  %li="|"
                  %li= link_to 'FAQ', welcome_faq_path
                  %li="|"
                  %li= link_to 'Privacy', welcome_privacy_path
                  %li="|"
                  %li= link_to 'About', welcome_about_path
                  %li="|"
                  %li= link_to 'Terms of Use', welcome_terms_path
              %p.copyright &copy; 2013 aGreatFirstDate.com
            .span6
              = image_tag 'logos.png', :class => 'logos'
    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"
